<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_shadow"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/historyThumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/pln" />

    <TextView
        android:id="@+id/historyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/historyThumbnail"
        android:layout_toEndOf="@+id/historyThumbnail"
        android:layout_toRightOf="@+id/historyThumbnail"
        android:text="PLN"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/historyJenis"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/historyTitle"
        android:layout_marginTop="1dip"
        android:layout_toEndOf="@+id/historyThumbnail"
        android:layout_toRightOf="@+id/historyThumbnail"
        android:text="POSTPAID"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/historyStatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/historyJenis"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/historyThumbnail"
        android:text="RC 0 - Sukses"
        android:textColor="#666666"
        android:textSize="13dip" />

    <TextView
        android:id="@+id/historyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#888888"
        android:text="2014/11/15"
        android:textSize="12dip" />

</RelativeLayout>