            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="NAMA : XXXXXXXXXXXX"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/prePrint_trfDaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="TARIF / DAYA : XXXX/XXXXXXVA"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/prePrint_noRef"
            android:layout_width="wrap_content"
