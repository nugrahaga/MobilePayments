<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5" >

        <!-- Header  Starts -->
        <!-- Header Ends -->
        <!-- Footer Start -->
        <!-- Footer Ends -->


        <!-- Registration Form -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp" >

            <!-- Field Data Petugas dan Password -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- ID Petugas Label -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="ID PELANGGAN"
                    android:textColor="#372c24" />

                <EditText
                    android:id="@+id/preP_idPel"
                    style="@style/EditTextAppDefaultTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true" />

                <!-- ID Petugas Label -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="NAMA PELANGGAN"
                    android:textColor="#372c24" />

                <EditText
                    android:id="@+id/preP_nama"
                    style="@style/EditTextAppDefaultTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true" />

                <!-- ID Petugas Label -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="TARIF/DAYA"
                    android:textColor="#372c24" />

                <EditText
                    android:id="@+id/preP_trfDaya"
                    style="@style/EditTextAppDefaultTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true" />

                <!-- ID Petugas Label -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="BULAN/TAHUN"
                    android:textColor="#372c24" />

                <EditText
                    android:id="@+id/preP_blTh"
                    style="@style/EditTextAppDefaultTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true" />

                <!-- ID Petugas Label -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="JUMLAH TAGIHAN"
                    android:textColor="#372c24" />

                <EditText
                    android:id="@+id/preP_rpTagPln"
                    style="@style/EditTextAppDefaultTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true" />

                <!-- ID Petugas Label -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="ADMIN BANK"
                    android:textColor="#372c24" />

                <EditText
                    android:id="@+id/preP_admBank"
                    style="@style/EditTextAppDefaultTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="TOTAL BAYAR"
                    android:textColor="#372c24" />

                <EditText
                    android:id="@+id/preP_totByr"
                    style="@style/EditTextAppDefaultTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true" />
            </LinearLayout>

            <!-- Register Button -->

            <Button
                android:id="@+id/preP_PAY"
                style="@style/ButtonAppDefaultTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="BELI"
                android:textColor="#fff" />
        </LinearLayout>
        <!-- Registration Form Ends -->
    </RelativeLayout>

</ScrollView>